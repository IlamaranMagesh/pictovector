{
  "version": 2,
  "functions": {
    "index.py": {
      "excludeFiles": "{node_modules/**,public/**,src/**,dist/**,build/**}"
    }
  },
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/index.py"
    }
  ]
}
